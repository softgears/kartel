@using Kartel.Trade.Web.Classes.Ext
@using Kartel.Trade.Web.Controllers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=1280px" />
    <title>@ViewBag.Title | Личный кабинет | Картель.рф</title>
    @Html.Partial("Includes")
</head>
<body class="account">
    <div>
        @* Шапка *@
        <header id="header">
            <div id="header-content">
                <div id="select-name">
                    <form action="/account/domain-save" id="domain-form" method="POST">
                        Выберите имя: <span class="name-part">www.</span><input type="text" name="domain" id="domain-field" value="@(( (BaseController) ViewContext.Controller ).CurrentUser.Subdomain)" /><span class="name-part">.karteltrade.ru</span>
                        <input type="submit" id="domain-submit" value=" " />
                    </form>
                </div>
                <a id="logo" href="/">
                    <img src="/Content/images/layout/logo.png" />
                </a>
                <div id="header-links">
                    <a id="ask" href="/feedback">Задать вопрос</a>
                    <span id="golden_supplier">
                        <span></span>
                        <div id="golden_supplier_popup_wrapper">
                            <div class="empty-block"></div>
                            <div id="golden_supplier_popup">
                                <h2>Премиальный тариф</h2>
                                <ul>
                                    <li>Выбор дизайна сайта</li>
                                    <li>Посещаемость в 28 раз ВЫШЕ</li>
                                    <li>Доступ к 100% тендеров</li>
                                    <li>Отсутствие рекламы на сайте</li>
                                    <li>Отсутствие товаров других продавцов</li>
                                </ul>
                                <div style="text-align: center;">
                                    <a href="/account/gold/" id="plug_now"></a>
                                </div>
                            </div>
                        </div>
                    </span>
                </div>
            </div>
        </header>
        @* Содержимое *@
        <section id="content">
            <div id="left_block">
                <div id="left_block_bg"></div>
            </div>
            <div id="content-wrapper">
                @* Содержимое страницы *@
                <div id="content-section-bg">
                    <div id="content-section-inner">

                        <div id="content-section">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                @* Боковое меню *@
                <div id="menu-block">
                    <div class="menu-block">
                        <div class="title">
                            Настройки сайта
                        </div>
                        <ul>
                            <li>
                                <a href="/account/">О компании</a>
                            </li>
                            <li>
                                <a href="/account/banner">Баннер на главной</a>
                            </li>
                            <li>
                                <a href="/account/design">Дизайн</a>
                            </li>
                        </ul>
                    </div>
                    <div class="menu-block">
                        <div class="title">
                            Товары и услуги
                        </div>
                        <ul>
                            <li>
                                <a href="/account/products">Товары</a>
                            </li>
                            <li>
                                <a href="/account/hot-products">Горячие товары</a>
                            </li>
                        </ul>
                    </div>
                    <div class="menu-block">
                        <div class="title">
                            Тендеры
                        </div>
                        <ul>
                            <li>
                                <a href="/account/tenders">Мои тендеры</a>
                            </li>
                            <li>
                                <a href="/account/tenders/participation">Участие в тендерах</a>
                            </li>
                        </ul>
                    </div>
                    <div class="menu-block">
                        <div class="title">
                            Премиум услуги
                        </div>
                        <ul>
                            <li>
                                <a href="/account/gold">Золотой Поставщик</a>
                            </li>
                        </ul>
                    </div>
                    <div class="menu-block">
                        <div class="title">
                            Рассылки
                        </div>
                        <ul>
                            <li>
                                <a href="/account/sending/">Email рассылки</a>
                            </li>
                            <li>
                                <a href="/account/sending/">SMS рассылки</a>
                            </li>
                        </ul>
                    </div>
                    <div class="menu-block">
                        <div class="title">
                            Настройки аккаунта
                        </div>
                        <ul>
                            @if (ViewContext.CurrentUser().Administrator > 0)
                            {
                                <li>
                                    <a href="/ControlPanel/">Администрирование</a>
                                </li>
                            }
                            <li>
                                <a href="/account/change-password">Сменить пароль</a>
                            </li>
                            <li>
                                <a href="/account/logoff">ВЫХОД</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="rigth_block">
                <div style="width: 100%"></div>
            </div>
            @* Подложка под контент *@

            <div style="clear: both"></div>
            </script>
        </section>
        @* Подвал *@
        @Html.Partial("Footer")
    </div>
    <script>
        $(document).ready(function () {
            if ($('#product-form').length) {
                setTimeout(function () {
                    $('#content-section-inner').height($('#content-wrapper').height() - 10);
                    $('#left_block_bg').height($('#content-section-inner').height());
                }, 500);
            } else {
                $('#content-section-inner').height($('#content-wrapper').height() - 10);
                $('#left_block_bg').height($('#content-section-inner').height());
            }
        });
    </script>
</body>
</html>
